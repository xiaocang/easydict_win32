{
  "manifest_version": 2,
  "name": "Easydict OCR Translate",
  "version": "1.0.0",
  "description": "Right-click to capture screen and translate with Easydict OCR",
  "permissions": ["contextMenus", "nativeMessaging"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "easydict-ocr@easydict.app",
      "strict_min_version": "109.0"
    }
  }
}
