<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Easydict.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Easydict.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="4">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutStates">
                <!-- Wide layout: all controls in one row -->
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ActionBarWide.Visibility" Value="Visible" />
                        <Setter Target="ActionBarNarrow.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <!-- Narrow layout: stacked controls -->
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ActionBarWide.Visibility" Value="Collapsed" />
                        <Setter Target="ActionBarNarrow.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE774;" FontSize="28" Foreground="{StaticResource AccentBrush}" />
                <TextBlock
                    Text="Easydict"
                    FontSize="22"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Indicator -->
            <Border
                x:Name="StatusIndicator"
                Grid.Column="1"
                Background="{StaticResource StatusDisconnectedBrush}"
                CornerRadius="12"
                Padding="12,6"
                VerticalAlignment="Center"
                Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse
                        x:Name="StatusDot"
                        Width="8" Height="8"
                        Fill="White"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Name="StatusText"
                        Text="Disconnected"
                        FontSize="12"
                        Foreground="White"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Settings Button -->
            <Button
                x:Name="SettingsButton"
                Grid.Column="2"
                Click="OnSettingsClicked"
                ToolTipService.ToolTip="Settings"
                Background="Transparent"
                BorderThickness="0"
                Width="36"
                Height="36"
                Padding="0"
                VerticalAlignment="Center">
                <FontIcon Glyph="&#xE713;" FontSize="18" />
            </Button>
        </Grid>

        <!-- Wide Layout: Language + Button in one row -->
        <Grid x:Name="ActionBarWide" Grid.Row="2" Margin="0,4,0,4" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />  <!-- Source Language -->
                <ColumnDefinition Width="Auto" />  <!-- Swap Button -->
                <ColumnDefinition Width="Auto" />  <!-- Target Language -->
                <ColumnDefinition Width="*" />     <!-- Translate Button (Right-aligned) -->
            </Grid.ColumnDefinitions>

            <!-- Source Language -->
            <ComboBox
                x:Name="SourceLangCombo"
                Grid.Column="0"
                MinWidth="130"
                SelectedIndex="0"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Source Language">
                <ComboBoxItem Content="Auto Detect" />
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="Chinese" />
                <ComboBoxItem Content="Japanese" />
            </ComboBox>

            <!-- Swap Languages Button -->
            <Button
                x:Name="SwapLanguageButton"
                Grid.Column="1"
                Click="OnSwapLanguagesClicked"
                Width="36" Height="36"
                Padding="0"
                CornerRadius="8"
                Background="Transparent"
                BorderThickness="0"
                ToolTipService.ToolTip="Swap source and target languages"
                Margin="8,0"
                VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8AB;" FontSize="16" />
            </Button>

            <!-- Target Language -->
            <ComboBox
                x:Name="TargetLangCombo"
                Grid.Column="2"
                MinWidth="130"
                SelectedIndex="1"
                SelectionChanged="OnTargetLanguageChanged"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Target Language">
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="Chinese" />
                <ComboBoxItem Content="Japanese" />
                <ComboBoxItem Content="Korean" />
                <ComboBoxItem Content="French" />
                <ComboBoxItem Content="German" />
                <ComboBoxItem Content="Spanish" />
            </ComboBox>

            <!-- Translate Button (Right) -->
            <Button
                x:Name="TranslateButton"
                Grid.Column="3"
                Click="OnTranslateClicked"
                Width="40"
                Height="40"
                Padding="0"
                CornerRadius="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{StaticResource AccentBrush}"
                ToolTipService.ToolTip="Translate">
                <Grid>
                    <ProgressRing
                        x:Name="LoadingRing"
                        IsActive="False"
                        Width="16" Height="16"
                        Foreground="White"
                        Visibility="Collapsed" />
                    <FontIcon
                        x:Name="TranslateIcon"
                        Glyph="&#xE8C1;"
                        FontSize="16"
                        Foreground="White" />
                </Grid>
            </Button>
        </Grid>

        <!-- Narrow Layout: Stacked controls -->
        <StackPanel x:Name="ActionBarNarrow" Grid.Row="2" Spacing="4" Margin="0,4,0,4" Visibility="Collapsed">
            <!-- Language row -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    x:Name="SourceLangComboNarrow"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="0"
                    ToolTipService.ToolTip="Source Language">
                    <ComboBoxItem Content="Auto Detect" />
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" />
                    <ComboBoxItem Content="Japanese" />
                </ComboBox>

                <!-- Swap Button (Narrow) -->
                <Button
                    x:Name="SwapLanguageButtonNarrow"
                    Grid.Column="1"
                    Click="OnSwapLanguagesClicked"
                    Width="36" Height="36"
                    Padding="0"
                    CornerRadius="8"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTipService.ToolTip="Swap source and target languages"
                    VerticalAlignment="Center"
                    Margin="4,0">
                    <FontIcon Glyph="&#xE8AB;" FontSize="16" />
                </Button>

                <ComboBox
                    x:Name="TargetLangComboNarrow"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="1"
                    SelectionChanged="OnTargetLanguageChanged"
                    ToolTipService.ToolTip="Target Language">
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" />
                    <ComboBoxItem Content="Japanese" />
                    <ComboBoxItem Content="Korean" />
                    <ComboBoxItem Content="French" />
                    <ComboBoxItem Content="German" />
                    <ComboBoxItem Content="Spanish" />
                </ComboBox>
            </Grid>

            <!-- Translate button row -->
            <Button
                x:Name="TranslateButtonNarrow"
                Click="OnTranslateClicked"
                Width="40"
                Height="40"
                Padding="0"
                CornerRadius="20"
                HorizontalAlignment="Center"
                Background="{StaticResource AccentBrush}"
                ToolTipService.ToolTip="Translate">
                <Grid>
                    <ProgressRing
                        x:Name="LoadingRingNarrow"
                        IsActive="False"
                        Width="16" Height="16"
                        Foreground="White"
                        Visibility="Collapsed" />
                    <FontIcon
                        x:Name="TranslateIconNarrow"
                        Glyph="&#xE8C1;"
                        FontSize="16"
                        Foreground="White" />
                </Grid>
            </Button>
        </StackPanel>

        <!-- Input Card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,2">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title row with consistent height -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Text="Source Text"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        VerticalAlignment="Center" />

                    <!-- Placeholder for symmetry (invisible) -->
                    <Border Grid.Column="1" Width="32" Height="15" />
                </Grid>

                <!-- Detected Language Label -->
                <TextBlock
                    x:Name="DetectedLanguageText"
                    Grid.Row="1"
                    Text=""
                    FontSize="11"
                    Foreground="{ThemeResource AccentBrush}"
                    Margin="4,0,0,0"
                    VerticalAlignment="Top"
                    Visibility="Collapsed" />

                <TextBox
                    x:Name="InputTextBox"
                    Grid.Row="1"
                    PlaceholderText="Enter or paste text to translate..."
                    Style="{StaticResource TranslationTextBoxStyle}"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="0,4,0,0"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    PreviewKeyDown="OnInputTextBoxKeyDown" />
            </Grid>
        </Border>

        <!-- Output Area: Multiple Service Results -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,2,0,0">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title row -->
                <TextBlock
                    Grid.Row="0"
                    Text="Translation Results"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="4,0,0,4" />

                <!-- Service Results ItemsControl -->
                <ItemsControl
                    x:Name="ResultsPanel"
                    Grid.Row="1"
                    VerticalAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Placeholder when no results -->
                <TextBlock
                    x:Name="PlaceholderText"
                    Grid.Row="1"
                    Text="Translation will appear here..."
                    FontSize="13"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Margin="8,8,0,0"
                    Visibility="Visible" />
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="StatusSummaryText"
                Grid.Column="0"
                Text=""
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
        </Grid>
        </Grid>
    </ScrollViewer>
</Page>
