<?xml version="1.0" encoding="UTF-8"?>
<!--
https://go.microsoft.com/fwlink/?LinkID=208121.
Self-contained deployment: includes .NET runtime, no user installation needed.
-->
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PublishProtocol>FileSystem</PublishProtocol>
    <Platform>x64</Platform>
    <RuntimeIdentifier Condition="$([MSBuild]::GetTargetFrameworkVersion('$(TargetFramework)')) >= 8">win-x64</RuntimeIdentifier>
    <RuntimeIdentifier Condition="$([MSBuild]::GetTargetFrameworkVersion('$(TargetFramework)')) &lt; 8">win10-x64</RuntimeIdentifier>
    <PublishDir>bin\publish\win-x64\</PublishDir>

    <!-- Self-Contained: Bundle .NET runtime with the app -->
    <SelfContained>true</SelfContained>

    <!-- Do not use single file (WinUI 3 doesn't support it well) -->
    <PublishSingleFile>false</PublishSingleFile>

    <!-- ReadyToRun: Pre-compile for faster startup (Release only) -->
    <PublishReadyToRun Condition="'$(Configuration)' == 'Debug'">false</PublishReadyToRun>
    <PublishReadyToRun Condition="'$(Configuration)' != 'Debug'">true</PublishReadyToRun>

    <!-- Do NOT trim WinUI 3 apps - breaks XAML reflection -->
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>
</Project>