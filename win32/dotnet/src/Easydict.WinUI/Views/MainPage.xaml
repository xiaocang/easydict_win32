<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Easydict.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Easydict.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutStates">
                <!-- Wide layout: all controls in one row -->
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ActionBarWide.Visibility" Value="Visible" />
                        <Setter Target="ActionBarNarrow.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <!-- Narrow layout: stacked controls -->
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ActionBarWide.Visibility" Value="Collapsed" />
                        <Setter Target="ActionBarNarrow.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE774;" FontSize="28" Foreground="{StaticResource AccentBrush}" />
                <TextBlock
                    Text="Easydict"
                    FontSize="22"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Indicator -->
            <Border
                x:Name="StatusIndicator"
                Grid.Column="1"
                Background="{StaticResource StatusDisconnectedBrush}"
                CornerRadius="12"
                Padding="12,6"
                VerticalAlignment="Center"
                Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse
                        x:Name="StatusDot"
                        Width="8" Height="8"
                        Fill="White"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Name="StatusText"
                        Text="Disconnected"
                        FontSize="12"
                        Foreground="White"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Settings Button -->
            <Button
                x:Name="SettingsButton"
                Grid.Column="2"
                Click="OnSettingsClicked"
                ToolTipService.ToolTip="Settings"
                Background="Transparent"
                BorderThickness="0"
                Width="36"
                Height="36"
                Padding="0"
                VerticalAlignment="Center">
                <FontIcon Glyph="&#xE713;" FontSize="18" />
            </Button>
        </Grid>

        <!-- Wide Layout: Language + Button in one row -->
        <Grid x:Name="ActionBarWide" Grid.Row="1" Margin="0,0,0,12" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Source Language -->
            <ComboBox
                x:Name="SourceLangCombo"
                Grid.Column="0"
                MinWidth="130"
                SelectedIndex="0"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Source Language">
                <ComboBoxItem Content="Auto Detect" />
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="Chinese" />
                <ComboBoxItem Content="Japanese" />
            </ComboBox>

            <!-- Translate Button (Center) -->
            <Button
                x:Name="TranslateButton"
                Grid.Column="1"
                Click="OnTranslateClicked"
                Height="40"
                Padding="24,0"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource AccentBrush}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressRing
                        x:Name="LoadingRing"
                        IsActive="False"
                        Width="16" Height="16"
                        Foreground="White"
                        Visibility="Collapsed" />
                    <FontIcon
                        x:Name="TranslateIcon"
                        Glyph="&#xE8C1;"
                        FontSize="16"
                        Foreground="White" />
                    <TextBlock
                        Text="Translate"
                        Foreground="White"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Target Language -->
            <ComboBox
                x:Name="TargetLangCombo"
                Grid.Column="2"
                MinWidth="130"
                SelectedIndex="1"
                VerticalAlignment="Center"
                ToolTipService.ToolTip="Target Language">
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="Chinese" />
                <ComboBoxItem Content="Japanese" />
                <ComboBoxItem Content="Korean" />
                <ComboBoxItem Content="French" />
                <ComboBoxItem Content="German" />
                <ComboBoxItem Content="Spanish" />
            </ComboBox>
        </Grid>

        <!-- Narrow Layout: Stacked controls -->
        <StackPanel x:Name="ActionBarNarrow" Grid.Row="1" Spacing="12" Margin="0,0,0,12" Visibility="Collapsed">
            <!-- Language row -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    x:Name="SourceLangComboNarrow"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="0"
                    ToolTipService.ToolTip="Source Language">
                    <ComboBoxItem Content="Auto Detect" />
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" />
                    <ComboBoxItem Content="Japanese" />
                </ComboBox>

                <FontIcon
                    Grid.Column="1"
                    Glyph="&#xE8AB;"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    VerticalAlignment="Center"
                    Margin="8,0" />

                <ComboBox
                    x:Name="TargetLangComboNarrow"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    SelectedIndex="1"
                    ToolTipService.ToolTip="Target Language">
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" />
                    <ComboBoxItem Content="Japanese" />
                    <ComboBoxItem Content="Korean" />
                    <ComboBoxItem Content="French" />
                    <ComboBoxItem Content="German" />
                    <ComboBoxItem Content="Spanish" />
                </ComboBox>
            </Grid>

            <!-- Translate button row -->
            <Button
                x:Name="TranslateButtonNarrow"
                Click="OnTranslateClicked"
                Height="40"
                Padding="24,0"
                CornerRadius="20"
                HorizontalAlignment="Center"
                Background="{StaticResource AccentBrush}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressRing
                        x:Name="LoadingRingNarrow"
                        IsActive="False"
                        Width="16" Height="16"
                        Foreground="White"
                        Visibility="Collapsed" />
                    <FontIcon
                        x:Name="TranslateIconNarrow"
                        Glyph="&#xE8C1;"
                        FontSize="16"
                        Foreground="White" />
                    <TextBlock
                        Text="Translate"
                        Foreground="White"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Input Card -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title row with consistent height -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Text="Source Text"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        VerticalAlignment="Center" />

                    <!-- Placeholder for symmetry (invisible) -->
                    <Border Grid.Column="1" Width="32" Height="28" />
                </Grid>

                <TextBox
                    x:Name="InputTextBox"
                    Grid.Row="1"
                    PlaceholderText="Enter or paste text to translate..."
                    Style="{StaticResource TranslationTextBoxStyle}"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="0,8,0,0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />
            </Grid>
        </Border>

        <!-- Output Card -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,8,0,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title row with consistent height -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Text="Translation"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        VerticalAlignment="Center" />

                    <Button
                        x:Name="CopyButton"
                        Grid.Column="1"
                        Click="OnCopyClicked"
                        ToolTipService.ToolTip="Copy to clipboard"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="32"
                        Height="28"
                        Padding="0"
                        VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                    </Button>
                </Grid>

                <TextBox
                    x:Name="OutputTextBox"
                    Grid.Row="1"
                    PlaceholderText="Translation will appear here..."
                    Style="{StaticResource TranslationTextBoxStyle}"
                    IsReadOnly="True"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="0,8,0,0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TimingText"
                Grid.Column="0"
                Text=""
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />

            <TextBlock
                x:Name="ServiceText"
                Grid.Column="1"
                Text=""
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Page>
