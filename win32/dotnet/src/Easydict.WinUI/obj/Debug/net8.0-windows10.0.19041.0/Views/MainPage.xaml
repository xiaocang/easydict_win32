<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Easydict.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Easydict.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header with status -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
                <TextBlock
                    Text="Easydict"
                    FontSize="24"
                    FontWeight="Bold"
                    Style="{StaticResource MyLabel}" />
                <Border x:ConnectionId='7'
                    x:Name="StatusIndicator"
                    Background="Gray"
                    CornerRadius="6"
                    Padding="8,4"
                    VerticalAlignment="Center">
                    <TextBlock x:ConnectionId='8'
                        x:Name="StatusText"
                        Text="Disconnected"
                        FontSize="12"
                        Foreground="White" />
                </Border>
            </StackPanel>

            <!-- Input area -->
            <TextBox x:ConnectionId='2'
                x:Name="InputTextBox"
                Grid.Row="1"
                PlaceholderText="Enter text to translate..."
                TextWrapping="Wrap"
                AcceptsReturn="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                FontSize="16" />

            <!-- Translate button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="0,16">
                <Button x:ConnectionId='5'
                    x:Name="TranslateButton"
                                              
                    Content="Translate"
                    Style="{StaticResource PrimaryAction}" />
                <ProgressRing x:ConnectionId='6'
                    x:Name="LoadingRing"
                    IsActive="False"
                    Width="24"
                    Height="24"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Output area -->
            <TextBox x:ConnectionId='3'
                x:Name="OutputTextBox"
                Grid.Row="3"
                PlaceholderText="Translation will appear here..."
                TextWrapping="Wrap"
                IsReadOnly="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                FontSize="16" />

            <!-- Footer with timing info -->
            <TextBlock x:ConnectionId='4'
                x:Name="TimingText"
                Grid.Row="4"
                Text=""
                FontSize="12"
                Foreground="Gray"
                Margin="0,8,0,0" />
        </Grid>
    </Page.Content>
</Page>

