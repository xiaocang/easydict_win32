<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Easydict.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Easydict.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE774;" FontSize="28" Foreground="{StaticResource AccentBrush}" />
                <TextBlock
                    Text="Easydict"
                    FontSize="22"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Status Indicator -->
            <Border x:ConnectionId='12'
                x:Name="StatusIndicator"
                Grid.Column="1"
                Background="{StaticResource StatusDisconnectedBrush}"
                CornerRadius="12"
                Padding="12,6"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Ellipse x:ConnectionId='13'
                        x:Name="StatusDot"
                        Width="8" Height="8"
                        Fill="White"
                        VerticalAlignment="Center" />
                    <TextBlock x:ConnectionId='14'
                        x:Name="StatusText"
                        Text="Disconnected"
                        FontSize="12"
                        Foreground="White"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Input Card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Text="Source Text"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,0,0,8" />

                <TextBox x:ConnectionId='11'
                    x:Name="InputTextBox"
                    Grid.Row="1"
                    PlaceholderText="Enter or paste text to translate..."
                    Style="{StaticResource TranslationTextBoxStyle}"
                    BorderThickness="0"
                    Background="Transparent"
                    VerticalAlignment="Stretch" />
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Grid Grid.Row="2" Margin="0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Swap button placeholder (for future use) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <ComboBox x:ConnectionId='10'
                    x:Name="SourceLangCombo"
                    Width="120"
                    SelectedIndex="0"
                    ToolTipService.ToolTip="Source Language">
                    <ComboBoxItem Content="Auto Detect" />
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" />
                    <ComboBoxItem Content="Japanese" />
                </ComboBox>
            </StackPanel>

            <!-- Center: Translate Button -->
            <Button x:ConnectionId='6'
                x:Name="TranslateButton"
                Grid.Column="1"
                                          
                Height="40"
                Padding="24,0"
                CornerRadius="20"
                Background="{StaticResource AccentBrush}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressRing x:ConnectionId='8'
                        x:Name="LoadingRing"
                        IsActive="False"
                        Width="16" Height="16"
                        Foreground="White"
                        Visibility="Collapsed" />
                    <FontIcon x:ConnectionId='9'
                        x:Name="TranslateIcon"
                        Glyph="&#xE8C1;"
                        FontSize="16"
                        Foreground="White" />
                    <TextBlock
                        Text="Translate"
                        Foreground="White"
                        FontWeight="SemiBold" />
                </StackPanel>
            </Button>

            <!-- Target Language -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <ComboBox x:ConnectionId='7'
                    x:Name="TargetLangCombo"
                    Width="120"
                    SelectedIndex="2"
                    ToolTipService.ToolTip="Target Language">
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Chinese" Tag="zh" />
                    <ComboBoxItem Content="Japanese" />
                    <ComboBoxItem Content="Korean" />
                    <ComboBoxItem Content="French" />
                    <ComboBoxItem Content="German" />
                    <ComboBoxItem Content="Spanish" />
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Output Card -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock
                        Text="Translation"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        VerticalAlignment="Center" />

                    <Button x:ConnectionId='5'
                        x:Name="CopyButton"
                        HorizontalAlignment="Right"
                                             
                        ToolTipService.ToolTip="Copy to clipboard"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8">
                        <FontIcon Glyph="&#xE8C8;" FontSize="14" />
                    </Button>
                </Grid>

                <TextBox x:ConnectionId='4'
                    x:Name="OutputTextBox"
                    Grid.Row="1"
                    PlaceholderText="Translation will appear here..."
                    Style="{StaticResource TranslationTextBoxStyle}"
                    IsReadOnly="True"
                    BorderThickness="0"
                    Background="Transparent"
                    VerticalAlignment="Stretch" />
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <TextBlock x:ConnectionId='2'
                x:Name="TimingText"
                Text=""
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                HorizontalAlignment="Left" />

            <TextBlock x:ConnectionId='3'
                x:Name="ServiceText"
                Text=""
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</Page>

